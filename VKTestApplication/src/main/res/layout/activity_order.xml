<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vk.vktestapp.OrderActivity">


    <TextView
        android:id="@+id/name"
        android:layout_margin="10dp"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        />

    <ListView
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/distway_text"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:text="@string/distwayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/distways"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RadioGroup>
    <Button
        android:id="@+id/distway_but"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distway_but"/>

    <TextView
    android:id="@+id/payway_text"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/payways"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RadioGroup>
    <Button
        android:id="@+id/payway_but"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payway_but"/>


</LinearLayout>
